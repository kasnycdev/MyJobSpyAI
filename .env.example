# ========================================
# Application Configuration
# ========================================

# Application Settings
APP_ENV=development  # development, staging, production
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_DATA_DIR=data

# ========================================
# LLM Configuration
# ========================================

# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:instruct
OLLAMA_TIMEOUT=300
OLLAMA_MAX_RETRIES=3
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# OpenAI Settings (if using OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION=

# Gemini Settings (if using Gemini)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro
GEMINI_REQUEST_TIMEOUT=900
GEMINI_MAX_RETRIES=3
GEMINI_MAX_CHUNK_CHARS=4000

# ========================================
# Vector Database (Milvus) Configuration
# ========================================
MILVUS_URI=your_milvus_uri_here
MILVUS_TOKEN=your_milvus_token_here
MILVUS_USERNAME=
MILVUS_PASSWORD=
MILVUS_COLLECTION_NAME=job_data
MILVUS_INDEX_TYPE=IVF_FLAT
MILVUS_METRIC_TYPE=COSINE
MILVUS_NLIST=16384
MILVUS_NPROBE=16
MILVUS_TIMEOUT=30

# ========================================
# Job Board API Keys
# ========================================
LINKEDIN_API_KEY=
INDEED_API_KEY=
ZIP_RECRUITER_API_KEY=
GLASSDOOR_API_KEY=

# ========================================
# Scraping Configuration
# ========================================
# Proxy settings (if needed)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Rate limiting (requests per minute)
SCRAPING_RATE_LIMIT=30
SCRAPING_DELAY=2  # seconds between requests

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=false

# ========================================
# Caching Configuration
# ========================================
CACHE_ENABLED=true
CACHE_DIR=cache/
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000

# ========================================
# Development/Testing
# ========================================
# Set to true to enable test mode (uses mock data)
TEST_MODE=false

# Test command example
TEST_COMMAND=python main.py --search "IT Operations" --resume "path/to/resume.pdf" --location "New York, NY" --min-salary=180000 -v
