# Application
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myjobspyai
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# LLM
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_API_KEY=your-api-key-here

# API
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_CORS_ORIGINS='["http://localhost:3000"]'

# Scraping
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_RETRY_DELAY=5
SCRAPING_TIMEOUT_DEFAULT=30
SCRAPING_TIMEOUT_NAUKRI=10
SCRAPING_TIMEOUT_INDEED=20
SCRAPING_TIMEOUT_LINKEDIN=25
