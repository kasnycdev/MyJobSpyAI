# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles use tabs for indentation
[Makefile]
indent_style = tab

# Dockerfiles use tabs for indentation
[Dockerfile*]
indent_style = tab

# Git configuration files
[.git*]
indent_style = tab

# Editor-specific files
[.vscode/*]
indent_style = space
indent_size = 2

# Ignore generated files
[dist/**]
indent_style = space
indent_size = 4
insert_final_newline = false

[build/**]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.min.js]
indent_style = space
indent_size = 4
insert_final_newline = false

# Binary files
[*.{png,jpg,jpeg,gif,ico,svg,eot,ttf,woff,woff2,pdf,zip,gz,tar,exe,dll,pyd,so,dylib,a,o,pyc,pyo,pth,egg,whl,db,sqlite,sqlite3,db-journal,sqlite-journal,sqlite3-journal,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm,db-wal,sqlite-wal,sqlite3-wal,db-shm,sqlite-shm,sqlite3-shm}]
indent_style = space
indent_size = 4
insert_final_newline = false
charset = binary
end_of_line = unset
